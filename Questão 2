==================================================
DATABASE.PHP

<?php

function get_db_connection() {
    $db = new PDO('sqlite:tasks.db');
    $db->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    return $db;
}

function create_table_if_not_exists() {
    $db = get_db_connection();
    $sql = "CREATE TABLE IF NOT EXISTS tarefas (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                descricao TEXT NOT NULL,
                data_vencimento TEXT,
                concluida INTEGER DEFAULT 0
            )";
    $db->exec($sql);
}

create_table_if_not_exists();
?>

=========================
ADD_TAREFA.PHP

<?php

include 'database.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $descricao = $_POST['descricao'];
    $data_vencimento = $_POST['data_vencimento'];

    $db = get_db_connection();
    $sql = "INSERT INTO tarefas (descricao, data_vencimento) VALUES (?, ?)";
    $stmt = $db->prepare($sql);
    $stmt->execute([$descricao, $data_vencimento]);

    header('Location: index.php');
    exit;
}
?>


=============================
UPDATE_TAREFA.PHP

<?php

include 'database.php';

if (isset($_GET['id'])) {
    $id = $_GET['id'];

    $db = get_db_connection();
    $sql = "UPDATE tarefas SET concluida = 1 WHERE id = ?";
    $stmt = $db->prepare($sql);
    $stmt->execute([$id]);

    header('Location: index.php');
    exit;
}
?>
===============================

DELETE_TAREFA.PHP

<?php

include 'database.php';

if (isset($_GET['id'])) {
    $id = $_GET['id'];

    $db = get_db_connection();
    $sql = "DELETE FROM tarefas WHERE id = ?";
    $stmt = $db->prepare($sql);
    $stmt->execute([$id]);

    header('Location: index.php');
    exit;
}
?>
