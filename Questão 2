INDEX.PHP

<?php

include 'database.php';

function listar_tarefas() {
    $db = get_db_connection();
    $sql = "SELECT * FROM tarefas";
    $stmt = $db->query($sql);
    return $stmt->fetchAll(PDO::FETCH_ASSOC);
}

$tarefas = listar_tarefas();
?>

